@model BuyalotV1._0.Models.SubscribeModel

@{
    ViewBag.Title = "Subscribe";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


@using (Html.BeginForm())
{
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">              
                    <h1 class="container">Newsletter</h1>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="firstName" class="col-sm-3 control-label">Name*</label>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.firstName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email" class="col-sm-3 control-label">Email*</label>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <br/>
                    <div class="col-sm-offset-3 col-sm-9">
                        <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-send"></span> Subscribe</button>
                    </div>
                    <br />
                    <p>
                        @Html.ActionLink("Back", "Index", new { controller = "Home"})
                    </p>
               
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


