@using BuyalotV1._0.Repository;
@{
    ICategoryRepository iCategoryRepository = new CategoryRepository();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" href="~/Images/buyalot.PNG" class="navbar-brand" />
    <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <style>

       .backcolor {
            background: #b4fff8;
        }

        a.sliderImage {
            margin: 0 25px 0 25px;
            text-align: center;
            display: block;
        }

        a.pname {
            margin: 25px;
            text-align: center;
            display: block;
        }

        #slider {
            height: 195px;
        }
    </style>
</head>

<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @*<a href="/#/"><img src="buyalot.PNG" class="brand" /></a>*@
            </div>
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav navbar-left">
                    <li>@Html.ActionLink(" Subscribe", "Subscribe", new { controller = "Subscribe" }, new { @style = "color:#0094ff" })</li>
                </ul>*@


                <ul class="nav navbar-nav navbar-right">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@

                    @*<li>@Html.ActionLink(" " + ViewData["CartCount"] + "", "Cart", new { controller = "Products" }, new { @class = "glyphicon glyphicon-shopping-cart"})</li>
                        <li>@Html.ActionLink(" " + ViewData["CartWishCount"] + "", "Wish", new { controller = "ProductsWishlist" }, new { @class = "glyphicon glyphicon-heart" })</li>*@


                    <li>@Html.ActionLink(" " + Convert.ToInt32(Session["cartCounter"]) + "", "Cart", new { controller = "Products" }, new { @class = "glyphicon glyphicon-shopping-cart" })</li>
                    <li>@Html.ActionLink(" " + Convert.ToInt32(Session["wishCounter"]) + "", "Wish", new { controller = "ProductsWishlist" }, new { @class = "glyphicon glyphicon-heart" })</li>
                </ul>
                @Html.Partial("_LoginPartial")

            </div>

        </div>
    </div>

    @*<br />*@

    <div>
        <div class="nav navbar-left">
            <ul>
                <li class="dropdown" dropdown="">

                    <h2 style="background-color:#373737">@Html.ActionLink("All Product Categories", "Index", new { controller = "Home" }, new { @class = "dropdown-toggle", style = "color:#ffffff;font-size:20px;" })</h2>
                    <ul class="dropdown" role="menu">

                        @foreach (var category in iCategoryRepository.findAll())
                        {
                            <li>
                                <a href="@Url.Action("Category", "Home", new { id = category.categoryName })">@category.categoryName</a>
                            </li>
                        }

                    </ul>
                </li>
            </ul>
        </div>
       </div>
    @*<br/>*@
        @*<div class="col-sm-offset-2">
                @*<ul class="nav navbar-nav row">
                        <li>@Html.ActionLink("New Deals", "")</li>
                        <li>@Html.ActionLink("New Deals", "")</li>
                        <li>@Html.ActionLink("New Deals", "")</li>
                        <li>@Html.ActionLink("New Deals", "")</li>
                    </ul><br/><br/><br/>
