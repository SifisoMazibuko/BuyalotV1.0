                    {
                    <div class="form-inline">
                        <input type="search" class="form-control" name="SearchString" style="max-width:800px;" id="myInput" onkeyup="myFunction()" placeholder="search for products..." />
                        <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-search"></span> Search </button>
                    </div>
                }
            </div>*@

        @*<br />
            <div class="container buy-slideshow">
                <div class="mover-1"></div>
            </div>*@


        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>
        <br />

        <footer class="container bottom navbar-fixed-bottom">

            <p>&copy; @DateTime.Now.Year - Buyalot</p>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
