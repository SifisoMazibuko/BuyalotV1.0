@using BuyalotV1._0.Models;
@model BuyalotV1._0.Models.ProductModel
@{
    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/bootstrap-formhelpers-countries.js"></script>
<div class="form-group">
    <h3><strong>Product Details</strong></h3>
    <hr />
    <div class="container">

        <div class="row">
            <div class="col-lg-3">
                <p>
                    @{

                        var base64 = Convert.ToBase64String(Model.productImage);
                        var prodImage = string.Format("data:image/png;base64,{0}", base64);

                        var price1 = Model.price.ToString();

                        var R = "R";
                        var price = R + "" + price1.ToString();
                    }
                    <img src="@prodImage" style="height:350px; width:300px" class="col-sm-5" />
                </p>
            </div>
            <div class="col-lg-6">
                <h3>@Html.DisplayFor(model => model.productName)</h3>
                <hr />
                <h3 style="color:#ff0000">@price</h3>
                <dl>

                    <dd>@Html.DisplayFor(model => model.vendor)</dd>
                    <dd>&#10004; Eligible for <b>Cash On Delivery</b></dd>
                    <dd><b>&#10004; Free Delivery Available</b></dd>
                    <dd><b>&#10004; Free Exchanges & Returns</b> for 30 days</dd>
                </dl>
            </div>
            <div class="col-lg-3">
                <div class="nav navbar-right" id="cartBox">
                    <h3 style="color:#ff0000">@price</h3>
                    <p>FREE DELIVERY</p>

                    @*<p>@Html.ActionLink("  AddToCart", "AddToCart", "Products", new { @class = "btn btn-success glyphicon glyphicon-shopping-cart" })</p>*@
                    @Html.ActionLink(" AddToCart", "AddToCart", "Products", new { id = Model.productID }, new { @class = "btn btn-success glyphicon glyphicon-shopping-cart" })
                    <br />
                    <br />
                    @Html.ActionLink(" AddToWishlist", "AddToWishlist", "ProductsWishlist", new { id = Model.productID }, new { @class = "btn btn-danger glyphicon glyphicon-heart" })

                </div>
            </div>
        </div>

    </div>
</div>


@*<p>
        <a class="glyphicon glyphicon-backward">@Html.ActionLink(" Back to products", "ViewProducts")</a>
    </p>*@


<div>
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#ds">Description</a></li>
        <li><a data-toggle="tab" href="#info">Product Info</a></li>

    </ul>

    <div class="tab-content">
        <div id="ds" class="tab-pane fade in active">
            <p>@Html.DisplayFor(model => model.productDescription)</p>
        </div>

      
        <div id="info" class="tab-pane fade">
            <p>
                <b data-country="US" data-flags="true">Title:</b> @Html.DisplayFor(model => model.productName)
            </p>
            <p>
                <b>Brand:</b> @Html.DisplayFor(model => model.vendor)
            </p>
            <span class="bfh-countries" data-country="US" data-flags="true"></span>
        </div>
    </div>
</div>

