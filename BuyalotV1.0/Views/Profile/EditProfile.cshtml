@model BuyalotV1._0.Models.CustomerInfoModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<h1>Update personal details</h1>
<br/>
@using (Html.BeginForm("EditProfile","Profile"))
{
    @Html.AntiForgeryToken()
    <fieldset class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.customerID)
        
        <legend class="container">Email Address</legend>
        <div class="form-group">
            <label for="Email" class="col-sm-3 control-label">Email:</label>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
        </div>
        <legend class="container">Password</legend>
        <div class="form-group">
            <label for="Password" class="col-sm-3 control-label">Password:</label>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
