        </div>

        <div class="form-group">
            <label for="ConfirmPassword" class="col-sm-3 control-label">Confirm Password:</label>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.confirmPassword, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.confirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <legend class="container">Personal Information</legend>
        <div class="form-group">
