<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">
                    <li>
                        <ul class="nav navbar-nav">
                            <li><a>@Html.ActionLink("Customers", "Index", "Customer")</a></li>
                            <li><a>@Html.ActionLink("Products", "ViewProducts", "ProductsManager")</a></li>
                            <li><a>@Html.ActionLink("Product Categories", "Index", "ProductCategoriesManager")</a></li>
                        </ul>
                    </li>
                </ul>*@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @if (Session["adminName"] != null)
    {
        <div class="col-md-2">
            <div class="panel-group" id="accordion">
                <div class="panel panel-info">

                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a href="/#/" data-toggle="collapse" data-parent="accordion">ADMIN DASHBOARD</a>
                        </h4>
                    </div>
                    <div id="admin" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <ul class="nav">
                                <li><a>@Html.ActionLink("Customers (" + Convert.ToInt32(Session["CusCount"]) + ")", "Index", "Customer")</a></li>
                                <li><a>@Html.ActionLink("Customer Orders (" + Convert.ToInt32(Session["OrderCount"]) + ")", "Index", "Order")</a></li>
                                <li><a>@Html.ActionLink("Products (" + Convert.ToInt32(Session["ProdCount"]) + ")", "Index", "ProductsManager")</a></li>
                                <li><a>@Html.ActionLink("Product Categories (" + Convert.ToInt32(Session["CatCount"]) + ")", "Index", "ProductCategoriesManager")</a></li>
                                <li><a>@Html.ActionLink("Subscribers (" + Convert.ToInt32(Session["SubCount"]) + ")", "Index", "SubscribeModels")</a></li>

                                @*<li><a href="#">Cart(<label id="cart">@Session["totalCartCounter"]</label>)</a></li>*@

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="container body-content">
        @RenderBody()
        <hr />        
    </div>

    <footer class="bottom nav navbar-fixed-bottom">
        <p>&copy; @DateTime.Now.Year - Buyalot Administrator</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
